{
  "name": "centraverse",
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo": "^0.42.0",
    "eslint-config-xo-typescript": "^0.53.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "eslint-plugin-unicorn": "^44.0.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss-html": "^1.5.0",
    "prettier": "^2.7.1",
    "prettier-plugin-jsdoc": "^0.4.2",
    "prettier-plugin-svelte": "^2.8.0",
    "stylelint": "^14.14.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.0.0",
    "svelte": "^3.52.0",
    "typescript": "^4.8.4"
  },
  "license": "AGPL-3.0-only",
  "packageManager": "yarn@4.0.0-rc.26",
  "private": true,
  "scripts": {
    "build": "yarn workspaces foreach --topological-dev -pv run build",
    "dev": "docker compose up -d --wait && yarn workspaces foreach -piv run dev",
    "format": "prettier . --write --ignore-unknown",
    "lint": "eslint . & stylelint '**/*.{css,scss,svelte}' &",
    "postinstall": "husky install",
    "prisma": "yarn workspace @centraverse/api run prisma",
    "reset": "docker compose up -dV --wait && yarn prisma migrate reset --force",
    "start": "docker compose up -d --wait && yarn workspaces foreach -piv run start",
    "storybook": "yarn workspace @centraverse/app run storybook"
  },
  "volta": {
    "node": "19.0.0",
    "yarn": "1.22.19"
  },
  "workspaces": [
    "packages/*"
  ]
}
